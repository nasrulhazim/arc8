#!/usr/bin/env bash

if type "npm" > /dev/null; then
	echo "üé® Compiling frontend assets for production..."
	npm run prod --silent >/dev/null
	if [[ `git status --porcelain` >/dev/null ]]; then
	  git add public/ resources/js resources/scss yarn.lock webpack.mix.js tailwind.config.js package-lock.json
	  bin/commit ui "Compiled Frontend Assets for Production"
	fi
	MESSAGE="üéâ Successfully compiled frontend assets for production"
else  
	MESSAGE="‚ò†Ô∏è You need to install NPM in order to install frontend dependencies." 
fi
clear
echo $MESSAGE
